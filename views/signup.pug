extends base

block content
  section#signup__form.margin__borders
    .form__section
      h2.heading__secondary Sign up for an account
      form.form
        .form__group
          label.form__label(for="email") Email address
          input#email.form__input(
            type="email",
            placeholder="you@example.com",
            required,
            autocomplete="off"
          )
        .form__group
          label.form__label(for="username") Username
          input#username.form__input(
            type="text",
            placeholder="Mango1234",
            required,
            autocomplete="off"
          )
        .form__group
          label.form__label(for="password") Password
          input#password.form__input(
            type="password",
            placeholder="••••••••",
            required,
            minlength="8",
            autocomplete="new-password"
          )
        .form__group
          label.form__label(for="password-confirm") Confirm Password
          input#password__confirm.form__input(
            type="password",
            placeholder="••••••••",
            required,
            minlength="8",
            autocomplete="new-password"
          )

        .form__group
          button.btn.btn__yellow(type="submit") Signup
